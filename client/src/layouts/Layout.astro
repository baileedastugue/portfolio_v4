---
import '../styles/reset.css';
import '../styles/base.css';
import '../styles/tooltip.css';
import '../styles/utilities.css';

interface Props {
  gap?: 1 | 2 | 3;
}

const { gap = 3 } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name='generator' content={Astro.generator} />
    <title>Bailee Dastugue</title>
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Didot:ital,wght@0,400;0,700;1,400;1,700&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap'
      rel='stylesheet'
    />
  </head>
  <body class={`layout gap-${gap}`}>
    <slot />
  </body>
</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 1024px) {
    .layout {
      margin-bottom: 3rem;
    }
  }
</style>
