---
import ArrowRightIcon from './ArrowRightIcon.astro';
import '../styles/history.css';
import { formatDate } from '../utils/date';

interface Image {
  alt: string;
  url: string;
}

interface Props {
  description?: string;
  image?: Image;
  pubDate: string | Date;
  title: string;
  url: string;
}

const { title, pubDate, description, url, image } = Astro.props;
---

<a href={url} class='post-summary section flex-column gap-1-5'>
  <div class='section-event'>
    {image && <img src={image.url} alt={image.alt} class='right' />}
    <p class='header'>
      <div class='title-wrapper'>
        <h3>{title}</h3>
        <div class='arrow-wrapper'>
          <ArrowRightIcon size={16} />
        </div>
      </div>
      <p class='date'>{formatDate(pubDate)}</p>
      {description && <p>{description}</p>}
    </p>
  </div>
</a>

<style>
  a:hover {
    text-decoration: none;
  }

  a:hover .section-event .title-wrapper {
    color: var(--color-tertiary);
  }

  img {
    border-radius: 4px;
    float: right;
    height: 96px;
    margin: 0 0 0.25rem 1rem;
    object-fit: cover;
    width: 96px;
  }

  p {
    font-weight: 400;
  }

  .section-event {
    box-sizing: border-box;
    color: var(--text-primary);
    float: left;
  }

  .date {
    margin: 0rem 0 0.75rem;
  }

  .left {
    float: left;
  }

  .right {
    float: right;
  }

  .title-wrapper {
    align-items: flex-start;
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    justify-content: space-between;
  }

  .arrow-wrapper {
    flex-shrink: 0;
    margin: 6px 0 0;
  }
</style>
