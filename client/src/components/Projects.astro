---
import Section from '../layouts/Section.astro';
interface Project {
  name: string;
  link: string;
  description: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<Section id='projects'>
  <h2 slot='title'>Projects</h2>
  <div slot='body'>
    {
      projects.map((project) => (
        <>
          <h3>
            <a href={project.link} target='_blank' rel='noopener noreferrer'>
              {project.name}
            </a>
          </h3>
          <p>{project.description}</p>
        </>
      ))
    }
  </div>
</Section>
