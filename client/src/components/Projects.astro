---
interface Project {
  name: string;
  link: string;
  description: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section id='projects'>
  <h2>Projects</h2>
  {
    projects.map((project) => (
      <>
        <h3>
          <a href={project.link} target='_blank' rel='noopener noreferrer'>
            {project.name}
          </a>
        </h3>
        <p>{project.description}</p>
      </>
    ))
  }
</section>
